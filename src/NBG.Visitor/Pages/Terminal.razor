@page "/terminal"
@layout RegistrationLayout
@using NBG.Visitor.Blazor
@using NBG.Visitor.Blazor.Components
@using System.Reflection
@using System.IO
@using NBG.Visitor.Blazor.Shared

<TerminalView Style="height: 100vh; background-image: url(_content/NBG.Visitor.Blazor/images/background.jpg); background-repeat: no-repeat;" Registered=OnRegister></TerminalView>

@code{
    private void OnRegister(byte[] pdf)
    {
        using (StreamWriter sw = new StreamWriter(new FileStream("./ticket.pdf", FileMode.Create)))
        {
            sw.Write(pdf);
        }
    }
}