@page "/terminal/{Culture}/{Guid:guid}"
@using NBG.Visitor.Blazor
@using NBG.Visitor.Blazor.Components
@using System.Reflection

<CascadingValue Value="Loc">
    <CascadingValue Value="SafetyItemResource">
        <TerminalView Style="height: 100vh; background-image: url(_content/NBG.Visitor.Blazor/images/background.jpg); background-repeat: no-repeat;" QRUrl="https://localhost:44335/terminal" PreregisteredVisitGuid=Guid></TerminalView>
    </CascadingValue>
</CascadingValue>

@code{
    [ParameterAttribute]
    public Guid Guid { get; set; }

    [ParameterAttribute]
    public string Culture { get; set; }

    private Localizer Loc;
    private System.Resources.ResourceManager SafetyItemResource = new("NBG.Visitor.WASM.Resources.SafetyItems", Assembly.GetExecutingAssembly());

    protected override void OnInitialized()
    {
        Loc = new("NBG.Visitor.WASM.Resources.Language", Assembly.GetExecutingAssembly(), Culture);
        base.OnInitialized();
    }
}