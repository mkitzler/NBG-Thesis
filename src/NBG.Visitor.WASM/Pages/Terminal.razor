@page "/terminal"
@layout RegistrationLayout
@using NBG.Visitor.Blazor
@using NBG.Visitor.Blazor.Components
@using System.Reflection
@using NBG.Visitor.Blazor.Components.Dialogs
@using NBG.Visitor.Blazor.Shared
@using System.IO

@inject IJSRuntime JS

<TerminalView Style="height: 100vh; background-image: url(_content/NBG.Visitor.Blazor/images/background.jpg); background-repeat: no-repeat;" QRUrl="https://localhost:44335/terminal" Registered=OnRegister></TerminalView>

@code{
    private async Task OnRegister(byte[] pdf)
    {
        await JS.InvokeVoidAsync("downloadFileFromBytes", "ticket.pdf", pdf);
    }
}